\\Task 1: Write a C++ program that will print the following pattern.
\\ Nested forloop

#include<iostream>
using namespace std;

int main()
{
    
    for(int i=1;i<=7;i++)
    {
        for(int j=1;j<=i;j++)
        {
            cout<<"*";
        }
        cout<<endl;
    }
    return 0;
}

\\Using nested while loop

#include <iostream>
using namespace std;

int main() {
    int i=1;
        while(i<=7)
        {
            int j=1;
            while(j<=i)
            {
                cout<<"*";
                j++;
            }
            cout<<endl;
            i++;
        }
    return 0;
}
