/* Create a program that outputs the days for a specified number of weeks. 
This will help you practice using nested loops in C++ and improve your understanding of iteration and output formatting. */

// using nested forloop

#include <iostream>
using namespace std;

int main() {
    int w,j;
    for(w=1;w<=3;w++)
    {
        cout<<endl<<"week-"<<w<<endl;
        
        for(j=1;j<=7;j++)
        {
            cout<<endl<<"Day "<<j;
        }
    }
    
    return 0;
}

// using nested whileloop

#include <iostream>
using namespace std;

int main() {
    int i=1;
        while(i<=3)
        {
            cout<<endl<<"week-"<<i<<endl;
            int j=1;
            while(j<=7)
            {
                cout<<endl<<"Day "<<j;
                j++;
            }
            cout<<endl;
            i++;
        }
    return 0;
}
