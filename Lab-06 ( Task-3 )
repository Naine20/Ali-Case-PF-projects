/* Write a program in C++ to print a pattern based on a user-input number of rows. 
The pattern should display increasing rows where each row i contains the integer i repeated i times. */
// using forloop

int main() {
    int i,j;
    
        for(i=1;i<=7;i++)
        {
            for(j=1;j<=i;j++)
            {
                cout<<i;
            }
            cout<<endl;
        }
    return 0;
}

// using whileloop

#include <iostream>
using namespace std;

int main() {
    int i=1;
        while(i<=7)
        {
            int j=1;
            while(j<=i)
            {
                cout<<i;
                j++;
            }
            cout<<endl;
            i++;
        }
    return 0;
}
