//Write a program to print a pyramid pattern with numbers where each row has incrementally increasing numbers.
// using nested for loop

#include <iostream>
using namespace std;

int main() {
    int i,j;
    
        for(i=1;i<=5;i++)
        {
            for(j=1;j<=i;j++)
            {
                cout<<j;
            }
            cout<<endl;
        }
    return 0;
}

// using Nested while loop

#include <iostream>
using namespace std;

int main() {
    int i=1;
        while(i<=5)
        {
            int j=1;
            while(j<=i)
            {
                cout<<j;
                j++;
            }
            cout<<endl;
            i++;
        }
    return 0;
}
